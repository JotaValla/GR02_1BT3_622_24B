<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PolimarketPU">

        <class>com.jotacode.polimarket.models.entity.Usuario</class>
        <class>com.jotacode.polimarket.models.entity.Anuncio</class>
        <class>com.jotacode.polimarket.models.entity.Valoracion</class>
        <class>com.jotacode.polimarket.models.entity.Cuenta</class>

        <properties>
            <!-- Configuración para MySQL -->
            
           <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
           <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/polimarket?useSSL=false&amp;serverTimezone=UTC"/>
           <property name="javax.persistence.jdbc.user" value="root"/>
           <property name="javax.persistence.jdbc.password" value="P@ssw0rd"/>
           <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
           <property name="hibernate.hbm2ddl.auto" value="update"/>


            <!-- Configuración para Derby (comentar esta sección para usar MySQL y descomentar para usar Derby)
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:/usr/local/tomcat/data/polimarket;create=true"/>

            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            -->


        </properties>


    </persistence-unit>

    <persistence-unit name="PolimarketPU-Test" transaction-type="RESOURCE_LOCAL">
        <class>com.jotacode.polimarket.models.entity.Usuario</class>
        <class>com.jotacode.polimarket.models.entity.Cuenta</class>
        <class>com.jotacode.polimarket.models.entity.Anuncio</class>
        <class>com.jotacode.polimarket.models.entity.Valoracion</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/polimarket_test?useSSL=false"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="P@ssw0rd"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
